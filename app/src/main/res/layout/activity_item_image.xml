<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mahlet.supermarketsystem.ItemImageActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="309dp"
        android:layout_height="64dp"
        android:text="You're almost done, take a picture of the Item"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginRight="37dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="37dp" />

    <Button
        android:id="@+id/btnFromCamera"
        android:layout_width="229dp"
        android:layout_height="48dp"
        android:text="Image from Camera"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginRight="102dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="102dp" />

    <Button
        android:id="@+id/btnFromGallery"
        android:layout_width="226dp"
        android:layout_height="48dp"
        android:layout_marginRight="105dp"
        android:layout_marginTop="40dp"
        android:text="Image from Gallery"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFromCamera"
        android:layout_marginEnd="105dp" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="148dp"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="145dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFromGallery"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout"></LinearLayout>
</android.support.constraint.ConstraintLayout>
