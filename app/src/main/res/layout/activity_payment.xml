<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mahlet.supermarketsystem.PaymentActivity"
    android:background="@mipmap/super3"
    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="196dp"
        android:layout_height="31dp"
        android:text="Pay using paypal"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginRight="94dp"
        android:textColor="@android:color/holo_orange_light"
        android:textColorHint="@android:color/holo_orange_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/etFirst"
        android:layout_width="299dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:ems="10"
        android:hint="Full Name "
        android:inputType="textPersonName"
        android:textColor="@android:color/holo_orange_light"
        android:textColorHint="@android:color/holo_orange_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp" />

    <EditText
        android:id="@+id/etAccount"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Your Account Number "
        android:inputType="number"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="21dp"
        android:textColorHint="@android:color/holo_orange_light"
        app:layout_constraintBottom_toTopOf="@+id/btnPay"
        android:textColor="@android:color/holo_orange_light"
        app:layout_constraintHorizontal_bias="0.507" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="262dp"
        android:layout_height="51dp"
        android:text="Pay Now"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="178dp"
        app:layout_constraintHorizontal_bias="0.301" />

    <EditText
        android:id="@+id/etAddressLine"
        android:layout_width="301dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Address Line"
        android:textColorHint="@android:color/holo_orange_light"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etFirst" />
</android.support.constraint.ConstraintLayout>